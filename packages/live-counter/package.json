{
  "name": "echolive-client",
  "private": false,
  "version": "0.0.7",
  "description": "View your website user count realtime",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "changeset": "changeset",
    "build": "rm -rf dist && tsc -b && vite build",
    "test": "jest --logHeapUsage --maxWorkers=8 --coverage --ci --silent=false",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "echolive",
    "live user count"
  ],
  "author": "Mouad Pn",
  "license": "Apache-2.0",
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/index.css"
  },
  "paths": {
    "@/*": [
      "./src/*"
    ]
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.3.6",
    "@types/jest": "^29.5.13",
    "@types/json-logic-js": "^2.0.7",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^22.5.5",
    "@types/phoenix": "^1.6.6",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "jest": "^29.7.0",
    "postcss": "^8.5.1",
    "preset": "link:@storybook/react-vite/preset",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.0.3",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.2",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.3.0"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@tailwindcss/vite": "^4.0.3",
    "phoenix": "^1.7.19"
  }
}
