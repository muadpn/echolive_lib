{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*.ts"]
}
